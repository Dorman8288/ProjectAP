                    <TextBlock Grid.Row="0" Grid.Column="1" Name="add_errors" Text="No Errors !" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkGreen" FontSize="15"></TextBlock>
                    <!--images-->
                    <Image Source="../Images/4406340.jpg" Grid.RowSpan="3" Grid.Column="3" Stretch="Fill" />
                    <Image Grid.Row="0" Source="../Images/ShopLogo.png" HorizontalAlignment="Left"/>

                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--مشخصات کاربر-->
                        <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" Kind="Rename" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="add_name"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Name"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                        <materialDesign:PackIcon Grid.Row="1" Grid.Column="0" Kind="FountainPenTip" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="add_writer"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Writer"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                        <materialDesign:PackIcon Grid.Row="2" Grid.Column="0" Kind="Publish" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="add_printyear"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Print year"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                        <materialDesign:PackIcon Grid.Row="3" Grid.Column="0" Kind="CurrencyUsd" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="add_cost"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Cost"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                        <materialDesign:PackIcon Grid.Row="4" Grid.Column="0" Kind="CardAccountDetails" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="add_detail"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Detail"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}" />

                        <materialDesign:PackIcon Grid.Row="5" Grid.Column="0" Kind="Barcode" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Name="add_procode"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="product code"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>
                    </Grid>
                    <Button  VerticalAlignment="Center" Click="add_browse" HorizontalAlignment="Center"
                             Grid.Row="2" Grid.Column="0"    
                             Style="{StaticResource MaterialDesignRaisedButton}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                             Content="Browse file" />

                    <Button  VerticalAlignment="Center" Name="add_imagebrowse" Click="add_imagebrowse_Click"
                             HorizontalAlignment="Center"
                             Grid.Row="2"
                             Grid.Column="1"
                             Style="{StaticResource MaterialDesignRaisedButton}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                             Content="Browse Image" />
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                          Width="auto"
                          Height="auto">

                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
                            Kind="BookEdit" />

                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="Edit" />

                    </StackPanel>
                </TabItem.Header>

                <Grid Background="#dbdbdb">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <!--Buttons-->
                    <!--search-->
                    <!--errors-->
                    <!--error-->
                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Name="edit_errors" Text="No Errors !" HorizontalAlignment="Center" Foreground="DarkGreen" FontSize="15"></TextBlock>
                    <!--VIP-->
                    <WrapPanel Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <TextBlock Text="VIP" FontWeight="Bold" FontSize="20"/>
                        <ToggleButton Background="#067e99" Name="edit_viptoggle" Checked="edit_viptoggle_Checked" Unchecked="edit_viptoggle_Unchecked"     
                          Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                          IsChecked="false" />
                    </WrapPanel>
                    <!--images-->
                    <Image Source="../Images/4406340.jpg" Grid.Column="3" Stretch="Fill" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="121,0,-8,0"/>
                    <Image Grid.Row="0" Source="../Images/ShopLogo.png" HorizontalAlignment="Left"/>
                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--مشخصات کاربر-->
                            <materialDesign:PackIcon Grid.Row="1" Grid.Column="0" Kind="Rename" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="edit_name"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Name"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>


                            <materialDesign:PackIcon Grid.Row="2" Grid.Column="0" Kind="FountainPenTip" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="edit_writer"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Writer"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>




                            <materialDesign:PackIcon Grid.Row="3" Grid.Column="0" Kind="Publish" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Name="edit_printyear"
                                         
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Print year"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                            <materialDesign:PackIcon Grid.Row="4" Grid.Column="0" Kind="CurrencyUsd" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Name="edit_cost"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Cost"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                            <materialDesign:PackIcon Grid.Row="5" Grid.Column="0" Kind="CardAccountDetails" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Name="edit_detail"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Detail"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}" />


                            <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" Kind="Barcode" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="edit_procode"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="product code"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                        </Grid>
                    </Grid>
                    <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"  Name="edit_browse" Click="edit_browse_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                                      Content="browse file" />


                    <!--دکمه بارگذاری فایل-->
                    <Button Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="edit_browseimage" Click="edit_browseimage_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                                      Content="browse image" />
                    <!--دکمه حذف محصول-->
                    <Button Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Name="edit_delete" Click="edit_delete_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                                      Content="Delete Book " />

                    <!--Apply-->
                    <Button Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="edit_apply" Click="edit_apply_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                                      Content="Apply" />
