            <TabItem>
                <TabItem.Header>
                    <StackPanel
                          Width="auto"
                          Height="auto">

                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
                            Kind="PercentCircleOutline" />

                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="Discount" />


                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#dbdbdb">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--error-->
                    <TextBlock Grid.Column="0" Name="dis_errors" Text="No Errors !" HorizontalAlignment="Center" Foreground="DarkGreen" FontSize="15"></TextBlock>


