<Window x:Class="ProjectAP.admin_section_develop.admin_main_section"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAP.admin_section_develop"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        Title="Admin" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="../Images/favicon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Back_Button_Click" Height="40">
            <WrapPanel VerticalAlignment="Center">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft"/>
                <TextBlock VerticalAlignment="Center" Text="Back"/>
            </WrapPanel>
        </Button>
        <TabControl Grid.Row="1"
                VerticalContentAlignment="Top"
                materialDesign:ColorZoneAssist.Mode="Inverted"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="Right" >




            <TabItem >
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                         Height="auto">
                        <materialDesign:PackIcon Margin=" 0 0 5 0"
                             Width="24"
                             Height="24"
                             HorizontalAlignment="Center"            
                        Kind="AccountDetails" />
                        <TextBlock
                            HorizontalAlignment="Center"
                         Text="Account" />
                    </StackPanel>
                </TabItem.Header>
                <materialDesign:Card Background="#dbdbdb">

                    <TabControl HorizontalAlignment="Left"
                         Width="725"
                         materialDesign:ColorZoneAssist.Mode="SecondaryDark"
                         Style="{StaticResource MaterialDesignFilledTabControl}">
                        <TabItem 
                            Header="VIP setting">
                            <Grid Margin="0,0,0,4" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--error-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Name="account_setting_errors" Text="No Errors !" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkGreen" FontSize="15"></TextBlock>
                                <!--image-->
                                <Image Source="../Images/4406340.jpg" Stretch="Fill" Margin="483,0,-11,-7" Grid.RowSpan="3" Grid.ColumnSpan="2" />

                                <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Width="40" Height="40" Kind="CurrencyUsd"  Foreground="{DynamicResource ForeGroundColor}"/>
                                    <TextBox Name="VIP_value_account" VerticalAlignment="Center" Width="300"
                                    Foreground="{DynamicResource ForeGroundColor}"
                                    materialDesign:HintAssist.Hint="Monthly subscription fee"
                                    materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    BorderBrush="{DynamicResource ForeGroundColor}"/>
                                </WrapPanel>

                                <!--Apply-->
                                <Button Grid.Row="2" Click="Account_apply_vip_value"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                                            Content="Apply" Height="35" Width="256" />

                            </Grid>
                        </TabItem>
                        <TabItem
                                Header="Customer info">
                            <StackPanel>
                                <WrapPanel DockPanel.Dock="Top">
                                    <Button Click="Search_Button_Click" Background="Transparent" Foreground="{DynamicResource ForeGroundColor}" BorderThickness="0" Style="{StaticResource MaterialDesignToolButton}">
                                        <materialDesign:PackIcon Kind="Search" Opacity="0.5"/>
                                    </Button>
                                    <TextBox Name="EmailSearchBox" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}" materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}" Width="100" materialDesign:HintAssist.Hint="Email" Margin="10"/>
                                    <TextBox Name="FirstNameSearchBox" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}" materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}" Width="100" materialDesign:HintAssist.Hint="FirstName" Margin="10"/>
                                </WrapPanel>
                                <DataGrid IsReadOnly="True" Name="customerDataGrid" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="FirstName" Binding="{Binding name}" />
                                        <DataGridTextColumn Header="LastName" Binding="{Binding familyName}" />
                                        <DataGridTextColumn Header="Email" Binding="{Binding email}" />
                                        <DataGridTextColumn Header="PhoneNumber" Binding="{Binding phoneNumber}" />
                                        <DataGridTextColumn Header="Balance" Binding="{Binding balance}" />
                                        <DataGridTextColumn Header="Total Sell" Binding="{Binding totalSell}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>

                        </TabItem>
                    </TabControl>
                </materialDesign:Card>
            </TabItem>

            <TabItem >
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"           
                        Kind="BookOpenBlankVariant" />
                        <TextBlock
                            HorizontalAlignment="Center"
                        Text="Books" />
                    </StackPanel>
                </TabItem.Header>

                <StackPanel>
                    <WrapPanel DockPanel.Dock="Top">
                        <Button Click="Search_Product_Button_Click" Background="Transparent" Foreground="{DynamicResource ForeGroundColor}" BorderThickness="0" Style="{StaticResource MaterialDesignToolButton}">
                            <materialDesign:PackIcon Kind="Search" Opacity="0.5"/>
                        </Button>
                        <TextBox Name="NameSearchBox" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}" materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}" Width="100" materialDesign:HintAssist.Hint="Name" Margin="10"/>
                        <TextBox Name="AuthorNameSearchBox" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}" materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}" Width="100" materialDesign:HintAssist.Hint="Author" Margin="10"/>
                    </WrapPanel>
                    <DataGrid IsReadOnly="True" Name="ProductDataGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                            <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                            <DataGridTextColumn Header="Author" Binding="{Binding author}" />
                            <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                            <DataGridTextColumn Header="Discount" Binding="{Binding discount}" />
                            <DataGridTextColumn Header="Total Sell" Binding="{Binding totalSell}" />
                            <DataGridTextColumn Header="Vip" Binding="{Binding isVip}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>



            <TabItem  >
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
            
                         Kind="Wallet" />
                        <TextBlock
                            HorizontalAlignment="Center"
                             Text="wallet" />
                    </StackPanel>
                </TabItem.Header>


                <Grid Background="#b3c9c4">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Name="errorTB" Text="No Error" Foreground="Green" FontSize="20"/>
                    <Border Height="50" Width="300" CornerRadius="10" Grid.Row="1"
                            BorderThickness="5" BorderBrush="DarkGray" Background="#defaf3">
                        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Stretch">
                            <TextBlock DockPanel.Dock="Left" Name="wallet_value"  FontSize="30"  Foreground="DarkBlue"></TextBlock>
                        </DockPanel>
                    </Border>

                    <Border Height="80" Width="300" CornerRadius="10" Grid.Row="2"
                        BorderThickness="3" BorderBrush="DarkGreen" Background="#defaf3"/>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <CheckBox
                            x:Name="MaterialDesignOutlinedTextBoxTextCountComboBox"
                         Content="View Text Input Count" />
                        <TextBox Name="wallet_card"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Height="51"
                            TextWrapping="Wrap"
                            MaxLength="16"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                            VerticalScrollBarVisibility="Auto"
                            materialDesign:HintAssist.Hint="input card number" Width="280" />
                    </StackPanel>

                    <Border Height="50" Width="150" CornerRadius="15" Grid.Row="3"
                        BorderThickness="5" BorderBrush="DarkGray" Background="#defaf3"/>
                    <Button Content="Withdraw" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="Black" BorderThickness="0" Name="wallet_withdraw_accept" Click="wallet_withdraw_accept_Click"></Button>

                </Grid>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
            
                        Kind="PackageVariantClosedPlus" />
                        <TextBlock
                            HorizontalAlignment="Center"
                        Text="Add" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#dbdbdb">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".6*"/>
                        <ColumnDefinition Width=".6*"/>
                        <ColumnDefinition Width=".6*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
