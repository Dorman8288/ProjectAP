                    <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0" Kind="Barcode" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}" Grid.Column="0" HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0,33,424,0" />
                        <TextBox Grid.Row="0" Grid.Column="1"  Name="dis_procode" Margin="10 0"
                                 Width="200"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Product Code"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                       VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>


                        <materialDesign:PackIcon Grid.Row="1" Kind="FountainPenTip" Height="25" Width="25" Foreground="{DynamicResource ForeGroundColor}" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Name="dis_value"
                                 Width="200"
                                      Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:HintAssist.Hint="Discount Value (%)"
                                      materialDesign:HintAssist.Foreground="{DynamicResource ForeGroundColor}"
                                      materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource ForeGroundColor}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      BorderBrush="{DynamicResource ForeGroundColor}"/>

                    </Grid>

                    <WrapPanel>
                        
                    </WrapPanel>
                    <Button  VerticalAlignment="Center" Name="dis_apply" Click="dis_apply_Click"
                             Grid.Row="4" HorizontalAlignment="Center" Width="200"
                             Style="{StaticResource MaterialDesignRaisedButton}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2" Background="#067e99" 
                             Content="Apply" />

                    <!--search-->
                    <ComboBox Name="dis_time"  Grid.Row="3" Height="20"
                                      Style="{StaticResource MaterialDesignFilledComboBox}"
                                      materialDesign:HintAssist.Hint="Time"
                                      materialDesign:HintAssist.HelperText="input your time for discount"
                                      Width="256">

                        <ComboBoxItem Name="dis_30min"
                                        Content="30 min"  />
                        <ComboBoxItem Name="dis_1hr"
                                        Content="1 hr" />
                        <ComboBoxItem Name="dis_2hr"
                                        Content="2 hr" />
                        <ComboBoxItem Name="dis_4hr"
                                        Content="4 hr" />
                        <ComboBoxItem Name="dis_12hr"
                                        Content="12 hr" />
                    </ComboBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
